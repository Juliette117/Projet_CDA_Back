{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "paths": {
      "@app/*":["apps/*/src"],
      "@app/shared/*": ["libs/shared/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}